<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>

</head>
    <body>
        <input type="button" value="Load boobs" id="load-boobs" class="btn btn-default" style="margin-bottom: 10px"/>
        <script>
            $(document).ready(function () {
                $('#load-boobs').click(function () {
                    $.ajax({
                        type: 'POST',
                        url: '/Picture/LoadBoobs',
                        dataType: 'json',
                        success: function (response) {
                            $('#links').append('<div id="pics" style="width: 100px;height: 100px;overflow: hidden;display: inline-block; float: left"><a href='
                                + response + ' data-gallery><img src=' + response + ' alt="picture" style="width: auto;height: 200px;margin: -30px 0 0 -30px;" /> </a></div>');
                        }
                    });
                });
            });
        </script>

    </body>
</html>
